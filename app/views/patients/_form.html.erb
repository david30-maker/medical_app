<%= form_with model: @patient, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
</div>
<div class="mb-3">
    <%= f.label :age, class: "form-label" %>
    <%= f.number_field :age, class: "form-control" %>
  </div>
<div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
</div>
<div class="mb-3">
        <%= f.label :phone, class: "form-label" %>
        <%= f.text_field :phone, class: "form-control" %>
</div>
<div class="mb-3">
        <%= f.label :address, class: "form-label" %>
        <%= f.text_area :address, class: "form-control" %>
</div>
<div class="mb-3">
  <%= f.label :registered_at, class: "form-label" %>
  <%= f.datetime_field :registered_at, class: "form-control" %>
</div>
<div class="mb-3">
  <%= f.label :status, class: "form-label" %>
  <%= f.select :status, Patient.statuses.keys, {}, class: "form-control" %>
</div>
<div class="mb-3">
  <%= f.submit "Save", class: "btn btn-primary" %>
</div> 
